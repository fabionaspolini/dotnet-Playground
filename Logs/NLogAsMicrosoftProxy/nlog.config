<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="${basedir}\Logs\NLogAsMicrosoftProxy-Sample.internal.log"
      internalLogLevel="Error" >

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="File"
            name="file"
            fileName="${basedir}\Logs\NLogAsMicrosoftProxy-Sample.log"
            keepFileOpen="true"
            openFileCacheTimeout="30"
            archiveEvery="Day"
            archiveDateFormat="yyyy-MM-dd"
            archiveNumbering="Date"
            maxArchiveDays="10"
            encoding="utf-8"
            layout="${date:format=dd/MM/yyyy HH\:mm\:ss.fff} ${level:uppercase=true} ${message} [${callsite}-${activityid}]${when:when=length('${all-event-properties}')>0:Inner: ${all-event-properties}}${newline:when=length('${exception}')>0}${exception:format=tostring}" />
    <target xsi:type="ColoredConsole"
            name="console"
            layout="${date:format=dd/MM/yyyy HH\:mm\:ss.fff} ${level:uppercase=true} ${message} [${callsite}-${activityid}]${when:when=length('${all-event-properties}')>0:Inner: ${all-event-properties}}${newline:when=length('${exception}')>0}${exception:format=tostring}" />
    <target  xsi:type="Console"
            name="console_json">
      <layout xsi:type="JsonLayout"
              includeScopeProperties="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="message" layout="${message}" />
        <attribute name='exception' layout='${exception:format=tostring}' />
        <attribute name="callsite" layout="${callsite}" />
        <attribute name="activityid" layout="${activityid}" />
        <attribute name="scopes" layout="${scopenested:format=@}" encode="false" />
      </layout>
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Error" writeTo="file,console_json" final="true" />
    <logger name="*" minlevel="Trace" writeTo="console_json" />
  </rules>
</nlog>